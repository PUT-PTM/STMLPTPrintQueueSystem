{% extends 'base.html.twig' %}

{% block body %}
    <h2>What would you like to do?</h2>
    {% if curNum %}
        <p>Current number: {{ curNum.generatedNum }}</p>
        <a href="{{ path('end_case') }}" class="caseop-btn">End case</a>
    {% else %}
        <a href="{{ path('start_case') }}" class="caseop-btn">Start next case</a>
    {% endif %}
{% endblock %}
